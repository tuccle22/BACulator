<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Beer Defaults">
        <EditTextPreference
            android:defaultValue="5.0"
            android:inputType="numberDecimal"
            android:key="beer_abv"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Beer ABV" />

        <EditTextPreference
            android:defaultValue="12"
            android:inputType="number"
            android:key="beer_oz"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Beer Oz" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Wine Defaults">
        <EditTextPreference
            android:defaultValue="12.0"
            android:inputType="numberDecimal"
            android:key="wine_abv"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Wine ABV" />

        <EditTextPreference
            android:defaultValue="5"
            android:inputType="number"
            android:key="wine_oz"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Wine Oz" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Shot Defaults">
        <EditTextPreference
            android:defaultValue="40.0"
            android:inputType="numberDecimal"
            android:key="shot_abv"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Shot ABV" />

        <EditTextPreference
            android:defaultValue="1.5"
            android:inputType="numberDecimal"
            android:key="shot_oz"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Shot Oz" />
    </PreferenceCategory>

</PreferenceScreen>
